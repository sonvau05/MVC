@model SellerApp.Models.Product
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Chi Tiết - @Model.Name</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1>@Model.Name</h1>
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name" style="max-height: 400px; object-fit: cover;">
            </div>
            <div class="col-md-6">
                <h3>Giá: @Model.Price.ToString("N0") VNĐ</h3>
                <p>@Model.Description</p>
                <button class="btn btn-primary" onclick="addToCart(@Model.Id, '@Model.Name', @Model.Price)">Mua hàng</button>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Quay lại trang chủ</a>
            </div>
        </div>
    </div>
    <script>
        function addToCart(id, name, price) {
            let cart = JSON.parse(localStorage.getItem('cart')) || [];
            cart.push({ id: id, name: name, price: price });
            localStorage.setItem('cart', JSON.stringify(cart));
            alert('Đã thêm ' + name + ' vào giỏ hàng!');
        }
    </script>
</body>
</html>