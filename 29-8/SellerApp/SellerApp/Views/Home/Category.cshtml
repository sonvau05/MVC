@model dynamic
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Sản Phẩm - @Model.Category.Name</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/site.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1>Sản phẩm trong @Model.Category.Name</h1>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mb-3">Quay lại trang chủ</a>
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="@Url.Action("Detail", "Home", new { id = product.Id })" class="text-decoration-none">@product.Name</a>
                            </h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text">Giá: @product.Price.ToString("N0") VNĐ</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>