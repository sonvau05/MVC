@model MovieApp.Models.Movie
<!DOCTYPE html>
<html>
<head>
    <title>@Model.Title Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-4">
        <h1>@Model.Title</h1>
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Title">
            </div>
            <div class="col-md-8">
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Price:</strong> $@Model.Price</p>
                <p><strong>Director:</strong> @Model.Director</p>
                <p><strong>Trailer:</strong> <a href="@Model.TrailerUrl">Watch Trailer</a></p>
                <p><strong>Watch:</strong> <a href="@Model.WatchUrl">Watch Now</a></p>
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </div>
    </div>
</body>
</html>