@model List<ProductApp.Models.Product>
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-3">
        <h3>Products</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Id</td>
                        <td><a href="@Url.Action("Details", new { id = p.Id })">@p.Name</a></td>
                        <td>@p.Price:C</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>