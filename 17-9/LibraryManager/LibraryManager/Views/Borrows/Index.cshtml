@model List<LibraryManager.Models.Borrow>

@{
    ViewData["Title"] = "Danh sách mượn sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Danh sách mượn sách</h2>
    <div class="card shadow-sm p-4 mb-4">
        <a href="/Borrows/Create" class="btn btn-success mb-3">
            <i class="bi bi-plus-circle"></i> Tạo mới
        </a>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Sách</th>
                        <th>Người mượn</th>
                        <th>Ngày mượn</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Book?.Title</td>
                                <td>@item.BorrowerName</td>
                                <td>@item.BorrowDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a href="/Borrows/Details/@item.Id" class="btn btn-info btn-sm">
                                        <i class="bi bi-eye"></i> Chi tiết
                                    </a>
                                    <a href="/Borrows/Edit/@item.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Sửa
                                    </a>
                                    <a href="/Borrows/Delete/@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">
                                Không có bản ghi mượn sách nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
