@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center mt-5">
    <h1 class="display-4 text-primary mb-4">
        Chào mừng đến với Hệ thống Quản lý Thư viện 📚
    </h1>
    <p class="lead mb-5">
        Quản lý sách, thể loại và mượn sách dễ dàng, nhanh chóng.
    </p>

    <div class="row justify-content-center g-4">
        <div class="col-md-3">
            <a href="/Categories/Index" class="btn btn-outline-primary btn-lg w-100 shadow-sm hover-scale">
                <i class="bi bi-tags"></i> Quản lý Thể loại
            </a>
        </div>

        <div class="col-md-3">
            <a href="/Books/Index" class="btn btn-outline-success btn-lg w-100 shadow-sm hover-scale">
                <i class="bi bi-book"></i> Quản lý Sách
            </a>
        </div>

        <div class="col-md-3">
            <a href="/Borrows/Index" class="btn btn-outline-warning btn-lg w-100 shadow-sm hover-scale">
                <i class="bi bi-cart"></i> Quản lý Mượn sách
            </a>
        </div>
    </div>


@section Scripts {
    <style>
        .hover-scale {
            transition: transform 0.2s ease-in-out;
        }
        .hover-scale:hover {
            transform: scale(1.05);
        }
    </style>
}
