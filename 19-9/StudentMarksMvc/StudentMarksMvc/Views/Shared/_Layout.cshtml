<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Quản lý điểm học sinh</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <header class="d-flex justify-content-between align-items-center p-3 shadow-sm bg-light">
        <h2 class="m-0 fw-bold">Student Marks Management</h2>
        <div>
            <button class="btn btn-primary me-2" onclick="openAddStudent()">Thêm học sinh</button>
            <button type="button" class="btn btn-success me-2" data-bs-toggle="modal" data-bs-target="#subjectModal">
                Quản lí môn học
            </button>
        </div>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
